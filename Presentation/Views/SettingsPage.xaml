<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BitChat.Maui.Presentation.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BitChat.Maui.Presentation.ViewModels"
             x:DataType="viewmodels:SettingsViewModel"
             Title="Settings"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="BitChat Settings" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryTextColor}" />
            
            <!-- User Identity Section -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   BorderColor="{DynamicResource BorderColor}"
                   CornerRadius="10"
                   Padding="20">
                
                <StackLayout Spacing="15">
                    <Label Text="User Identity" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}" />
                    
                    <!-- Nickname Input -->
                    <StackLayout Spacing="5">
                        <Label Text="Display Name" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                        
                        <Entry x:Name="NicknameEntry"
                               Text="{Binding Nickname, Mode=TwoWay}"
                               Placeholder="Enter your nickname"
                               MaxLength="20"
                               BackgroundColor="{DynamicResource EntryBackgroundColor}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               PlaceholderColor="{DynamicResource PlaceholderTextColor}" />
                        
                        <!-- Validation Error Display -->
                        <Label Text="{Binding NicknameError}"
                               TextColor="Red"
                               FontSize="12"
                               IsVisible="{Binding HasNicknameError}" />
                    </StackLayout>
                    
                    <!-- Character Count -->
                    <Label Text="{Binding CharacterCount, StringFormat='{0}/20 characters'}"
                           FontSize="12"
                           HorizontalOptions="End"
                           TextColor="{DynamicResource SecondaryTextColor}" />
                    
                    <!-- Save Button -->
                    <Button Text="Save Changes"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="5"
                            IsEnabled="{Binding CanSave}" />
                    
                </StackLayout>
            </Frame>
            
            <!-- App Information Section -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   BorderColor="{DynamicResource BorderColor}"
                   CornerRadius="10"
                   Padding="20">
                
                <StackLayout Spacing="10">
                    <Label Text="About BitChat" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}" />
                    
                    <Label Text="Decentralized messaging over Bluetooth mesh networks"
                           FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}" />
                    
                    <Label Text="Version 1.0.0"
                           FontSize="12"
                           TextColor="{DynamicResource SecondaryTextColor}" />
                </StackLayout>
            </Frame>
            
            <!-- Debug Actions (for development) -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   BorderColor="{DynamicResource BorderColor}"
                   CornerRadius="10"
                   Padding="20">
                
                <StackLayout Spacing="10">
                    <Label Text="Development Actions" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}" />
                    
                    <Button Text="Reset All Settings"
                            Command="{Binding ResetSettingsCommand}"
                            BackgroundColor="DarkRed"
                            TextColor="White"
                            CornerRadius="5" />
                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ScrollView>
</ContentPage>