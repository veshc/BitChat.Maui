<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitChat.Maui.MainPage"
             Title="BitChat">

    <Grid>
        <!-- Settings Button in Top Right -->
        <Button x:Name="SettingsBtn"
                Text="⚙️"
                FontSize="20"
                BackgroundColor="Transparent"
                TextColor="{DynamicResource PrimaryColor}"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Margin="10"
                WidthRequest="50"
                HeightRequest="50"
                Clicked="OnSettingsClicked"
                SemanticProperties.Hint="Open settings" />

        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                VerticalOptions="Center">
                
                <!-- BitChat Logo/Icon -->
                <Label
                    Text="💬"
                    FontSize="120"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="BitChat messaging app icon" />

                <Label
                    Text="BitChat"
                    Style="{StaticResource Headline}"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="Decentralized messaging&#10;over Bluetooth mesh networks"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center" />

                <!-- Status Display -->
                <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="10"
                       Padding="20"
                       Margin="0,20">
                    <StackLayout Spacing="10">
                        <Label Text="Status: Getting Started"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                        <Label Text="Welcome to BitChat! Configure your settings to begin messaging."
                               HorizontalTextAlignment="Center"
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </StackLayout>
                </Frame>

                <!-- Quick Actions -->
                <StackLayout Spacing="15" Margin="0,20">
                    <Button
                        x:Name="SettingsButton"
                        Text="Configure Settings" 
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnSettingsClicked"
                        HorizontalOptions="Fill" />
                    
                    <Label Text="Set your nickname and configure your identity to start chatting with nearby users."
                           FontSize="12"
                           HorizontalTextAlignment="Center"
                           TextColor="{DynamicResource SecondaryTextColor}" />
                </StackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
